#modal
  display: none
  position: fixed
  z-index: 10
  left: 0
  top: 0
  overflow: auto
  width: 100vw
  height: 100vh
  background-color: rgba(0,0,0,0.4)

  *
    color: #eeeeee

  &.opened
    display: block

  #modal-content
    background-color: dark-grey[0]
    position: relative
    margin: auto
    padding: 0
    border: 1px solid #888
    max-width: 50%
    animation-name: animatetop
    animation-duration: 1s
    animation-fill-mode: forwards

    #modal-header
    #modal-footer
    #modal-body
      box-sizing: border-box
      min-height: 2em
      padding: 0.5em 3em
      background-color: dark-grey[1]
    
    #modal-header
      position: relative

      .delete-button
        position: absolute
        top: 0
        right: -3em
        height: 2rem
        width: 2rem
        padding: 0.25rem
        background-color: dark-grey[1]
        font-size: 0.75em

        &:hover
          background-color: crimson

    #modal-body
      padding: 1em 3em
      background-color: dark-grey[0]

@keyframes animatetop
    from
      top: -100vh
      opacity: 0
    to
      top: 15%
      opacity: 1

