#modal
  display: none
  position: fixed
  z-index: 10
  left: 0
  top: 0
  overflow: auto
  width: 100vw
  height: 100vh
  background-color: rgba(0,0,0,0.4)
  color: #eeeeee

  &.opened
    display: block

  #modal-content
    background-color: dark-grey[0]
    position: relative
    margin: auto
    padding: 0
    border: 1px solid #888
    max-width: 50%
    animation-name: animatetop
    animation-duration: 1s
    animation-fill-mode: forwards

    #modal-header
    #modal-footer
    #modal-body
      min-height: 1em
      padding: 0.5em 3em
      background-color: dark-grey[1]

    #modal-body
      padding: 1em 3em
      background-color: dark-grey[0]

@keyframes animatetop
    from
      top: -100vh
      opacity: 0
    to
      top: 20%
      opacity: 1

