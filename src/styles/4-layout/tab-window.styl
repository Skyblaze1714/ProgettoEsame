//Tab window
#tab-window
  height: 100vh
  display: grid
  grid-template-rows: tab-window.nav.height tab-window.menu.height

  #tab-nav
    display: flex
    background: dark-grey[0]
    .button
      position: relative
      flex-basis: tab-window.nav.height
      box-sizing: border-box
      padding: tab-window.nav.button.padding
      transition: 0.5s 0.08s
      div
        position: absolute
        top: 0
        right: 0
        bottom: 0
        left: 0
        display: flex
        justify-content: center
        align-items: center
        background: white
        color: black
        transform: translateY(-100%)
        transition: 0.3s
        span
          text-transform: uppercase
          font-size: 14px
          font-weight: 400
      > span
        color: white
        font-size: 2.5em

      &:not(.active):hover
        div
          transform: translateY(0px)

      &.active
        background: dark-grey[1]

    &.move-left
      .button:nth-child(1)
        margin-left: side-menu.width - tab-window.nav.height


  #tab-menu
    background: dark-grey[1]
    color: white
    .menu
      height: 100%


  #tab-view
    display: flex
    flex-direction: row-reverse
    #properties-panel
      width: properties-panel.width
      box-sizing: border-box
      padding: properties-panel.padding
      background: dark-grey[0]
      color: white
      .list .property
        separator(horizontal, 1px solid white)
